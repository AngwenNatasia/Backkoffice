<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Text: Izin Karyawan -->
        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IZIN KARYAWAN"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/gradient_button"
            android:padding="16dp" />

        <!-- Nama (from database) -->
        <EditText
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama"
            android:background="#EAF5FF"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:focusable="false"
            android:enabled="false" /> <!-- Make it non-editable -->

        <!-- Divisi (from database) -->
        <EditText
            android:id="@+id/divisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Divisi"
            android:background="#EAF5FF"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:focusable="false"
            android:enabled="false" /> <!-- Make it non-editable -->

        <!-- Lama Izin (formatted as "1 hari") -->
        <EditText
            android:id="@+id/lama_izin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lama Izin (dihitung per hari, contoh: 1 hari)"
            android:background="#EAF5FF"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:inputType="text" />

        <!-- Keterangan Izin -->
        <EditText
            android:id="@+id/keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Keterangan Izin"
            android:background="#EAF5FF"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:inputType="text" />

        <!-- Tanggal Izin (formatted as "dd-mm-yyyy") -->
        <EditText
            android:id="@+id/tanggal_izin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tanggal Izin (dd-mm-yyyy)"
            android:background="#EAF5FF"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:inputType="date" />

        <!-- LinearLayout for Back and Submit buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <!-- Back Button -->
            <Button
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                app:backgroundTint="@null"
                android:background="@drawable/gradient_button"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginEnd="16dp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                app:backgroundTint="@null"
                android:background="@drawable/gradient_button"
                android:textColor="#FFFFFF"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
